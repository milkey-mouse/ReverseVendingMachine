<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="BorderLess.WindowBorderLess"
        Title="MainWindow" Height="650" Width="1200"
        Style="{DynamicResource MainWindowStyle}">
    <Grid>
        <Label Content="Reverse Vending Machine - Derpton Middle School" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-35,0,0" Foreground="#FFBBBBBB" FontSize="21.333"/>
        <Grid HorizontalAlignment="Left" Height="576.666" Margin="-6,0.334,0,0" VerticalAlignment="Center" Width="266" Background="#FFB2B2B2">
            <Viewbox HorizontalAlignment="Left" Height="40" Margin="65,15,0,0" VerticalAlignment="Top" Width="185" StretchDirection="UpOnly">
                <TextBlock x:Name="ItemName" HorizontalAlignment="Center" TextWrapping="Wrap" Text="No item selected" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center" FontFamily="Segoe UI">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" ScaleX="1"/>
                            <SkewTransform AngleY="0" AngleX="0"/>
                            <RotateTransform Angle="0"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Viewbox>
            <Grid x:Name="PizzaIcon" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="50">
                <Ellipse Fill="#FF2ECC71" HorizontalAlignment="Left" Height="50" Stroke="#FF2ECC71" VerticalAlignment="Top" Width="50" Margin="0" d:IsLocked="True"/>
                <Image Margin="10,10,0,0" Source="Pizza-50.png" Stretch="Fill" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" d:IsLocked="True"/>
            </Grid>
            <ScrollViewer x:Name="ItemScroll" HorizontalAlignment="Left" Height="577" Margin="266,0,-644,-0.334" VerticalAlignment="Top" Width="644">
                <VirtualizingStackPanel x:Name="ItemList">
                    <Button x:Name="Chaaaaaps" BorderBrush="#FFCCCCCC" Background="White" Height="45" ClipToBounds="True" Width="625" Padding="1" Margin="0,0,0,-1" Click="Button_Click" HorizontalContentAlignment="Left" FontSize="24">
                		<StackPanel Height="43" Width="623" Margin="-1,-1,0,0" Orientation="Horizontal">
							<Label Content="Snacks/Chips &amp; Pretzels/Potato Chips/" Foreground="Gray" FontSize="16" HorizontalAlignment="Left" Margin="0,5.86" VerticalAlignment="Center" />
                			<Label Content="Chaaaaaps" Foreground="Black" FontSize="16" HorizontalAlignment="Left" Margin="-10,3,0,0" VerticalAlignment="Center" BorderThickness="0" />
                		</StackPanel>
                	</Button>
                    <Button x:Name="Duhreeters" BorderBrush="#FFCCCCCC" Background="White" Height="45" ClipToBounds="True" Width="625" Padding="1" Margin="0,0,0,-1" Click="Button_Click" HorizontalContentAlignment="Left" FontSize="24">
                        <StackPanel Height="43" Width="623" Margin="-1,-1,0,0" Orientation="Horizontal">
                            <Label Content="Snacks/Chips &amp; Pretzels/Potato Chips/" Foreground="Gray" FontSize="16" HorizontalAlignment="Left" Margin="0,5.86" VerticalAlignment="Center" />
                            <Label Content="Duhreeters" Foreground="Black" FontSize="16" HorizontalAlignment="Left" Margin="-10,3,0,0" VerticalAlignment="Center" BorderThickness="0" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="Chietous" BorderBrush="#FFCCCCCC" Background="White" Height="45" ClipToBounds="True" Width="625" Padding="1" Margin="0,0,0,-1" Click="Button_Click" HorizontalContentAlignment="Left" FontSize="24">
                        <StackPanel Height="43" Width="623" Margin="-1,-1,0,0" Orientation="Horizontal">
                            <Label Content="Snacks/Chips &amp; Pretzels/Cheese Puffs/" Foreground="Gray" FontSize="16" HorizontalAlignment="Left" Margin="0,5.86" VerticalAlignment="Center" />
                            <Label Content="Chietous" Foreground="Black" FontSize="16" HorizontalAlignment="Left" Margin="-10,3,0,0" VerticalAlignment="Center" BorderThickness="0" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="a1_Dollar_Diabeetus" BorderBrush="#FFCCCCCC" Background="White" Height="45" ClipToBounds="True" Width="625" Padding="1" Margin="0,0,0,-1" Click="Button_Click" HorizontalContentAlignment="Left" FontSize="24">
                        <StackPanel Height="43" Width="623" Margin="-1,-1,0,0" Orientation="Horizontal">
                            <Label Content="Snacks/Chips &amp; Pretzels/Potato Chips/" Foreground="Gray" FontSize="16" HorizontalAlignment="Left" Margin="0,5.86" VerticalAlignment="Center" />
                            <Label Content="1 Dollar Diabeetus" Foreground="Black" FontSize="16" HorizontalAlignment="Left" Margin="-10,3,0,0" VerticalAlignment="Center" BorderThickness="0" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="Liquid_MLG" BorderBrush="#FFCCCCCC" Background="White" Height="45" ClipToBounds="True" Width="625" Padding="1" Margin="0,0,0,-1" Click="Button_Click" HorizontalContentAlignment="Left" FontSize="24">
                        <StackPanel Height="43" Width="623" Margin="-1,-1,0,0" Orientation="Horizontal">
                            <Label Content="Beverages/Soda Pop/Cola/" Foreground="Gray" FontSize="16" HorizontalAlignment="Left" Margin="0,5.86" VerticalAlignment="Center" />
                            <Label Content="Liquid MLG" Foreground="Black" FontSize="16" HorizontalAlignment="Left" Margin="-10,3,0,0" VerticalAlignment="Center" BorderThickness="0" />
                        </StackPanel>
                    </Button>
                </VirtualizingStackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
